@model IEnumerable<TelefonAksesuar.Models.Urunler>

@{
    ViewBag.Title = "Arama Sonucu";
}

<h2></h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
               " @ViewData["arananKelime"] " - Arama Sonuçları
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Anasayfa", "Index", "Home")
                </li>
                <li class="active">Arama</li>
            </ol>
        </div>
    </div>

    <div class="row">

        @{  string aranan;
            if (@ViewData["arananKelime"] == null) { aranan = null; }
            else { aranan = @ViewData["arananKelime"].ToString(); }
        }
            @foreach (var urun in Model)
            {

                <div class="col-md-3 portfolio-item">
                    <a href="@Url.Action("UrunDetay","Urunler", new { id = urun.UrunID })">
                        <img src="~/Images/Urunler/@urun.Resim" class="img-responsive" style="height:150px">
                    </a>
                    <h3>
                        
                            @if (@urun.Marka.ToUpper() == @aranan.ToUpper())
                            {  <a href="@Url.Action("UrunDetay", "Urunler", new { id = urun.UrunID })" style="background-color:lightgray"> @urun.Marka</a>  }
                            else
                            {
                                <a href="@Url.Action("UrunDetay", "Urunler", new { id = urun.UrunID })">@urun.Marka</a>
                            }
                            @if (urun.Model.ToUpper() == aranan.ToUpper())
                            { <a href="@Url.Action("UrunDetay", "Urunler", new { id = urun.UrunID })" style="background-color:lightgray"> @urun.Model</a>  }
                            else
                            {
                                <a href="@Url.Action("UrunDetay", "Urunler", new { id = urun.UrunID })">@urun.Model</a>
                            }
                                                   
                    </h3>
                    <p>Fiyat:@urun.Fiyat TL</p>
                    <a href="@Url.Action("UrunDetay", "Urunler", new { id = urun.UrunID })" class="btn btn-primary">Ürün Detayı <i class="fa fa-angle-right"></i></a>
                </div>
         
          }
      


    </div>

</div>
   
